<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawableTop="@drawable/logo"
        android:gravity="center"
        android:orientation="vertical"
        android:text="@string/welcome_message"
        android:textSize="20sp" />

    <Switch
        android:id="@+id/turn_on_notifications_toggle"
        android:text="Toggle Notification"
        android:textOn="ON"
        android:textOff="OFF"
        android:layout_above="@+id/push_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/push_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign_out_button"
        android:layout_centerHorizontal="true"
        android:text="Push Me"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Sign Out"
        android:textSize="20sp" />

</RelativeLayout>
